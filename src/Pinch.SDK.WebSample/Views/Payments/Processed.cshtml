@model List<Pinch.SDK.Payments.PaymentExpanded>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Processed Payments</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Amount</th>
            <th>Transaction Date</th>
            <th>Estimated Settlement Date</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
        <tr>
            <td><a href="@Url.Action("Details", "Payments", new { id = payment.Id })">@payment.Id</a></td>
            <td>@payment.Amount</td>
            <td>@payment.TransactionDate</td>
            <td>@payment.EstimatedTransferDate</td>
            <td>@payment.Description</td>
            <td>@payment.Status</td>
        </tr>
        }
    </tbody>
</table>